<% include ../partials/header %>
<div class="container new-input">
	<h1 class="text-center">Edit <%= camp.name %></h1>
	<form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="titleInput">Camp Title</label>
			<input type="text" name="camp[name]" class="form-control" id="titleInput" value="<%= camp.name %>">
		</div>
		<div class="form-group">
			<label for="imgInput">Cover Image</label>
			<input type="text" name="camp[image]" class="form-control" id="imgInput" value="<%= camp.image %>">
		</div>
		<div class="form-group">
			<label for="descriptionInput">Description</label>
			<textarea class="form-control" name="camp[description]" id="descriptionInput" rows="5"><%= camp.description %></textarea>
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">Update</button>
		</div>
	</form>
	<a href="/camps/<%= camp._id %>">Back to Camp Detail</a>
</div>
