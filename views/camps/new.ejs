<% include ../partials/header %>
<div class="container new-input">
	<h1 class="text-center">Create a Camp</h1>
	<form action="/camps" method="POST">
		<div class="form-group">
			<label for="titleInput">Camp Title</label>
			<input type="text" name="camp[name]" class="form-control" id="titleInput" placeholder="Name of your camp...">
		</div>
		<div class="form-group">
			<label for="imgInput">Cover Image</label>
			<input type="text" name="camp[image]" class="form-control" id="imgInput" placeholder="Title image URL...">
		</div>
		<div class="form-group">
			<label for="descriptionInput">Description</label>
			<textarea class="form-control" name="camp[description]" id="descriptionInput" rows="5"></textarea>
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">Submit</button>
		</div>
	</form>
	<a href="/camps">Back to All Camps</a>
</div>
